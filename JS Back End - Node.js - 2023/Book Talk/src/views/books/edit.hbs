
{{#each errorMessage}}
<div>
    <div class="errorContainer">
        <p>{{this}}</p>
    </div>
</div>
{{/each}}

<section class="edit-form-container">

    <form method="POST">
        <h3>Edit Book Review</h3>
        <label>Title</label>
        <input type="text" name="title" class="box" value="{{foundBook.title}}" id="">
        <label>Author</label>
        <input type="text" name="author" class="box" value="{{foundBook.author}}" id="">
        <label>Genre</label>
        <input type="text" name="genre" class="box" value="{{foundBook.genre}}" id="">
        <label>Stars</label>
        <input type="number" name="stars" class="box" value="{{foundBook.stars}}" id="">
        <label>Image</label>
        <input type="text" name="image" class="box" value="{{foundBook.image}}" id="">
        <label>Review</label>
        <textarea class="box"
            name="review">{{foundBook.review}}</textarea>
        <input type="submit" value="Edit" class="btn">
    </form>
</section>