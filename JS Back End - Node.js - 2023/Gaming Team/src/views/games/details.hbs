<main id="details">
    <section id="details-info">
        <div class="game-image">
            <img src="{{foundGame.image}}">
        </div>

        <div class="game-info">
            <div class="game-text">
                <h1 id="name">{{foundGame.name}}</h1>
                <h3 id="platform">Platform: {{foundGame.platform}}</h3>
                <p id="price"><span>Price: ${{foundGame.price}}</span></p>
                <p id="genre"><span>Genre: {{foundGame.genre}}</span></p>
                <p id="description">{{foundGame.description}}</p>
            </div>
            <div class="product-btn">
                <!--Only for registered user and author of the publication -->
                {{#if isOwner}}
                <div class="author">
                    <a href="#" class="btn-edit">Edit</a>
                    <a href="#" class="btn-delete">Delete</a>
                </div>
                {{/if}}

                <!-- Logged in user who has not yet buy this game code-->
                <a href="/games/buy/{{foundGame._id}}" class="btn-buy">Buy</a>

                <!-- Logged in user who has already buy this game code-->
                <!-- <p class="buy-message">You have already bought this game</p> -->
            </div>
        </div>
    </section>
</main>