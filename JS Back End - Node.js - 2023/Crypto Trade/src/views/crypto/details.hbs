<main>
    <section id="details-info">
        <h1>Details</h1>
        <div class="coin-image">
            <img src="{{foundCrypto.image}}">
        </div>

        <div class="coin-info">
            <div class="coin-text">
                <h1 id="name">{{foundCrypto.name}}</h1>
                <h3 id="payment">Payment method: {{foundCrypto.payment}}</h3>
                <p id="price"><span>Price: ${{foundCrypto.price}}</span></p>
                <p id="description">{{foundCrypto.description}}</p>
            </div>
            <div class="product-btn">
                {{#if isOwner}}
                <div class="author">
                    <a href="/crypto/edit/{{foundCrypto._id}}" class="btn-edit">Edit</a>
                    <a href="/crypto/delete/{{foundCrypto._id}}" class="btn-delete">Delete</a>
                </div>
                {{/if}}

                {{#if hasBought}}
                <p class="buy-message">You already bought these crypto coins.</p>
                {{else}}
                {{#if isAuthenticated}}
                {{#unless isOwner}}
                <a href="/crypto/buy/{{foundCrypto._id}}" class="btn-buy">Buy</a>
                {{/unless}}
                {{/if}}
                {{/if}}


            </div>
        </div>
    </section>
</main>