<main class="details">
    <!-- Details page -->
    <section id="details">
        <div id="details-wrapper">
            <p id="details-title">Name: {{foundAnimal.name}}</p>
            <div id="img-wrapper">
                <img src="{{foundAnimal.image}}" />
            </div>
            <div id="info-wrapper">
                <table>
                    <tr>
                        <td>
                            <p>
                                Years: <span id="details-years">{{foundAnimal.years}}</span>
                            </p>
                        </td>
                        <td>
                            <p>Kind: <span id="details-kind">{{foundAnimal.kind}}</span></p>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <p>Need of: <span id="details-need">{{foundAnimal.need}}</span></p>
                        </td>
                        <td>
                            <p>Location: <span id="details-location">{{foundAnimal.location}}</span></p>
                        </td>
                    </tr>
                </table>
                <p>Description: <span id="details-description">{{foundAnimal.description}}</span></p>
            </div>

            <!--Edit and Delete are only for creator-->
            {{#if isAuthenticated}}
            <div id="action-buttons">
                {{#if isOwner}}
                <a href="/animals/edit/{{foundAnimal._id}}" id="edit-btn">Edit</a>
                <a href="/animals/delete/{{foundAnimal._id}}" id="delete-btn">Delete</a>
                {{else}}
                {{#unless hasDonated}}
                <a href="/animals/donate/{{foundAnimal._id}}" id="donation-btn">Donation</a>
                {{else}}
                <p id="already-donated">You already donated!</p>
                {{/unless}}
                {{/if}}
            </div>
            {{/if}}
        </div>
    </section>
</main>